<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_calculator">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="223dp"
        android:columnCount="6"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout
            android:id="@+id/numbersLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorNumbers"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/button7"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9" />

            <Button
                android:id="@+id/button4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6" />
            <Button
                android:id="@+id/button1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1" />
            <Button
                android:id="@+id/button2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2" />
            <Button
                android:id="@+id/button3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3" />

            <Button
                android:id="@+id/buttonDecimal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="." />

            <Button
                android:id="@+id/button0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0" />
        </GridLayout>

        <GridLayout
            android:id="@+id/operationsLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:elevation="2dp"
            android:outlineProvider="bounds"
            android:background="@color/colorOperators"
            android:columnCount="2"
            android:rowCount="4">

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="@string/square_root_sign" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:text="@string/multiply_sign"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:text="+"
                app:layout_column="0" />

            <Button
                android:id="@+id/buttonExp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="EXP" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:text="@string/divide_sign" />

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:text="@string/long_minus_sign" />
            <Button
                android:id="@+id/buttonEnter"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="@string/enter_sign" />
        </GridLayout>

        <GridLayout
            android:id="@+id/actionsLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="5"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorActions"
            android:rowCount="4">

            <Button
                android:id="@+id/buttonUndo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="↶" />

            <Button
                android:id="@+id/buttonSwap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:text="↹" />

            <Button
                android:id="@+id/buttonDrop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:text="DROP" />

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:text="AC" />
        </GridLayout>
    </GridLayout>
</android.support.constraint.ConstraintLayout>