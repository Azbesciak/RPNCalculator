<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorNumbers">@color/colorNumbersLight</item>
        <item name="colorActions">@color/colorActionsLight</item>
        <item name="colorOperators">@color/colorOperatorsLight</item>
        <item name="buttonStyle">@style/ButtonFontStyle</item>
    </style>
    <style name="ButtonFontStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

