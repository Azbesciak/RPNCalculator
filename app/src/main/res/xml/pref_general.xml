<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_value_precision"
        android:inputType="number"
        android:key="value_precision"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_value_precision" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/pref_titles_rounding_mode"
        android:entryValues="@array/pref_values_rounding_mode"
        android:key="rounding_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_rounding_mode" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_titles_themes"
        android:entryValues="@array/pref_titles_values"
        android:key="app_theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_themes" />

</PreferenceScreen>
